
<div class="row"><h2>Catalogo Productos</h2></div>
<br />
<br />
<div class=" loader loader-default is-active" data-text="Cargando" id="spin" style="visibility: hidden"></div>
<div class="row">
    <div class="btn-group" role="group" aria-label="Basic example">
        <button id="btnAgregar"  type="button" class="btn btn-secondary">Guadar</button>
       
    </div>
</div>
<br />
<br />
<div class="row container">
    <div class="table-responsive col-sm-2 col-md-4 col-lg-12" id="divTbProducto" style="visibility: hidden">
        <table class="table  table-dark" id="tbProductos">
            <thead>
                <tr>
                    <th><input type="checkbox" name="select_all" value="1" id="example-select-all" /></th>
                    <th>Nombre</th>
                    <th>Edad</th>
                    <th>Precio</th>
                    <th>Compañia</th>
                    


                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="ModalAgregarProducto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class=" col-sm-2 col-md-4 col-lg-12">
                        <div class="form-group row">
                            <label for="txtMateria"  class="col-sm-2 col-form-label">Nombre</label>
                            <div class="col-sm-2 col-md-4 col-lg-12">
                                <input type="text" class="form-control" id="txtNombre" placeholder="Nombre">
                            </div>
                            
                        </div>
                        <div class="form-group row">
                            <label for="txtDescripcion" class="col-sm-2 col-form-label">Descripción</label>
                            <div class="col-sm-2 col-md-4 col-lg-12">
                                <input type="text" class="form-control" id="txtDescripcion" placeholder="Descripcion">
                            </div>
                           
                        </div>
                        <div class="form-group row">
                            <label for="txtRestriccionEdad" class="col-sm-2 col-form-label">Restriccion Edad</label>
                            <div class="col-sm-2 col-md-4 col-lg-12">
                                <input type="text" class="form-control" id="txtRestriccionEdad" placeholder="Restriccion Edad">
                            </div>
                          
                        </div>
                        <div class="form-group row">
                            <label for="txtCompania" class="col-sm-2 col-form-label">Compañia</label>
                            <div class="col-sm-2 col-md-4 col-lg-12">
                                <input type="text" class="form-control" id="txtCompania" placeholder="Compañia">
                            </div>
                            
                        </div>
                        <div class="form-group row">
                            <label for="txtPrecio"  class="col-sm-2 col-form-label">Precio</label>
                            <div class="col-sm-2 col-md-4 col-lg-12">
                                <input type="text" class="form-control" id="txtPrecio" placeholder="Precio">
                            </div>
                            
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="button" id="btnGuardar" onclick="GuardarProducto()" class="btn btn-primary">Guardar</button>
                    </div>
                    </div>
                </div>
                </div>
            </div>
</div>
<script src="~/Scripts/Producto/Producto.js"></script>